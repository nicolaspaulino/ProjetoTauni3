<form action="/cardapio/addProduto" method="POST">

  <label for="nome">Nome do Produto:</label><br>
  <input type="text" id="produto" name="produto" placeholder="Insira o nome aqui" required><br><br>

  <label for="descricao">Tipo:</label><br>
  <input type="text" id="tipo" name="tipo" placeholder="Insira um tipo aqui" required></input><br><br>

  <label for="preco">Preço (R$):</label><br>
  <input type="number" step="0.01" id="preço" name="preco" placeholder="Insira o preço aqui" required><br><br>

  <button type="submit">Adicionar Produto</button>

</form>